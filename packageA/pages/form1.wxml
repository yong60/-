<!--pages/form1/form1.wxml-->
  <view class="activity">
			<form bindsubmit="formSubmit">
				<view class="activity_form">
					<view class="activity_form_title">社团活动申请表</view>

          <view class="activity_form_input">
						<text>活动名称：</text>
						<input name="activity" value="{{activity}}" placeholder="请输入名称" placeholder-class="activity_form_input_input_placeholder"></input>
					</view>

          	<view class="activity_form_input">
						<text>申请人：</text>
						<input name="name" value="{{name}}" placeholder="请输入姓名" placeholder-class="activity_form_input_input_placeholder"></input>
					</view>

            <view class="activity_form_input">
						<text>社团名称：</text>
						<input name="corporation" value="{{corporation}}" placeholder="请输入名称" placeholder-class="activity_form_input_input_placeholder"></input>
					</view>
          	
					<view class="activity_form_input">
						<text>活动时间：</text>
						<input name="time" value="{{time}}" placeholder="请输入时间（例如8点-10点）" placeholder-class="activity_form_input_input_placeholder"></input>
					</view>

					<view class="activity_form_input">
						<text>活动人数：</text>
						<input name="people" value="{{people}}" placeholder="请输入人数" placeholder-class="activity_form_input_input_placeholder"></input>
					</view>

					<view class="activity_form_input">
						<text>活动日期：</text>
						<input name="date" value="{{date}}" placeholder="请输入日期（例2020/06/18)" placeholder-class="activity_form_input_input_placeholder"></input>
					</view>

					<view class="activity_form_input">
						<text>联系方式：</text>
						<input name="phone" value="{{people}}" placeholder="请输入手机号"  type="number" placeholder-class="activity_form_input_input_placeholder"></input>
					</view>

					<view class="activity_form_input">
						<text>简介：</text>
						<textarea name='introduction' value="{{introduction}}" placeholder="请输入活动介绍" placeholder-class="activity_form_input_input_placeholder"></textarea>
					</view>


  		<view class="activity_form_button">
        <button class="press" form-type="submit" hover-class="plain-hover">
          <view>提交</view>
        </button>
      </view>
			<text>\n</text>
      </view>
      </form>
      </view>
